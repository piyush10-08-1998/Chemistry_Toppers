# Server Configuration
PORT=5001
NODE_ENV=production

# Frontend URL (CORS)
# For local development: http://localhost:5173
# For production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:5173

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/chemistry_test_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chemistry_test_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_EXPIRES_IN=7d

# Admin Credentials (First Teacher Account)
ADMIN_EMAIL=teacher@chemistry.com
ADMIN_PASSWORD=admin123

# Email Verification (set to 'true' to enable email verification requirement)
EMAIL_VERIFICATION_ENABLED=false